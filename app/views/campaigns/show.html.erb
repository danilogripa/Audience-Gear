<div class="row">
	<div class="col-md-12">
		<h1 class="page-header">Campaign #<%= @campaign.id %></h1>
	</div>
</div>
<div class="row">
	<div class="col-md-12">
		<div class="panel panel-default">
		  <div class="panel-heading">User Information</div>
		  <div class="panel-body">
				<div class="row">
					<div class="col-md-2 text-right">Status: </div>
					<div class="col-md-10">
						<% if @campaign.status? == true %>
							<strong>On</strong>
						<% else %>
							<strong>Off</strong>
						<% end %>

						<%= link_to campaign_active_path(@campaign.id) do %>
							<%= "Ativar" if @campaign.status? == false %>
							<%= "Desativar" if @campaign.status? == true %>
						<% end %>

					</div>
				</div>
				<div class="row">
					<div class="col-md-2 text-right">Company Name: </div>
					<div class="col-md-10"><strong><%= @campaign.company_name %></strong></div>
				</div>
				<div class="row">
					<div class="col-md-2 text-right">Email: </div>
					<div class="col-md-10 text-left"><strong><%= @campaign.email %></strong></div>
				</div>
				<div class="row">
					<div class="col-md-2 text-right">Contact Name: </div>
					<div class="col-md-10 text-left"><strong><%= @campaign.contact_name %></strong></div>
				</div>
				<div class="row">
					<div class="col-md-2 text-right">Phone: </div>
					<div class="col-md-10 text-left"><strong><%= @campaign.phone %></strong></div>
				</div>
				<div class="row">
					<div class="col-md-2 text-right">Cnpj: </div>
					<div class="col-md-10 text-left"><strong><%= @campaign.cnpj %></strong></div>
				</div>
				<div class="row">
					<div class="col-md-2 text-right">Rtg Tag: </div>
					<div class="col-md-10 text-left">
						<textarea name="name" rows="6" cols="100" disabled>
							<%= @campaign.rtg_tag %>
						</textarea>
					</div>
				</div>
		  </div>
		</div>
	</div>
</div>
<div class="row">
	<div class="col-md-12">
		<div class="panel panel-default">
		  <div class="panel-heading">Sites Information <%= link_to "New Site", new_site_path(campaign_id: @campaign.id), class: "btn btn-.primary" %></div>
			<% if @campaign.sites.count <= 0 %>
				<div class="text-center text-danger">Usuario n√£o possui site cadastrado</div>
			<% else %>
			  <table class="table">
						<tr>
							<th>Url</th>
							<th>Name</th>
							<th>Status</th>
							<th></th>
							<th></th>
						</tr>
					<% @campaign.sites.each do |site| %>
						<tr>
							<td><%= site.url %></td>
							<td><%= site.name %></td>
							<td>
								<%= link_to site_active_path(site) do %>
									<% if site.active == true %>
										On
									<% else %>
										Off
									<% end %>
								<% end %>
							</td>
							<td><%= link_to "Edit", edit_site_path(site)  %></td>
							<td><%= link_to 'Delete', site_path(site), method: :delete, data: { confirm: 'Are you sure?' } %></td>
						</tr>
					<% end %>
				</table>
			<% end %>
		</div>
	</div>
</div>
